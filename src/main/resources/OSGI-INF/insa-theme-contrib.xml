<?xml version="1.0"?>
<component name="fr.insa.ged.config.theme">

  <require>org.nuxeo.theme.nuxeo.default</require>
  <require>org.nuxeo.ecm.admin.center.theme</require>
  <require>org.nuxeo.ecm.user.center.theme</require>
  <!-- Theme pages -->
  <extension target="org.nuxeo.theme.styling.service" point="pages">

    <themePage name="galaxy/default">
      <styles append="true">
        <style>insa</style>
      </styles>
    </themePage>
    
    <themePage name="admin/default">
      <styles append="true">
        <style>insa</style>
      </styles>
    </themePage>
    
    <themePage name="userCenter/default">
      <styles append="true">
        <style>insa</style>
      </styles>
    </themePage>
    
  </extension>

  <!-- Styles -->
  <extension target="org.nuxeo.theme.styling.service" point="styles">

    <style name="insa">
      <src>themes/css/insa.css</src>
    </style>

  </extension>

</component>